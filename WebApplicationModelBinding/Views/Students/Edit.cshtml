@model Student

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>Add</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <form method="post" class="col-8 offset-2">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control">
                </div>
                <div class="mb-3">
                    <label asp-for="Surname" class="form-label">Soyad</label>
                    <input asp-for="Surname" class="form-control">
                </div>
                <div class="mb-3">
                    <label asp-for="Age" class="form-label">Yaş</label>
                    <input asp-for="Age" class="form-control">
                </div>
                <div class="mb-3">
                    <label asp-for="Speciality" class="form-label">Ixtisas</label>
                    <input asp-for="Speciality" class="form-control">
                </div>
                <div class="mb-3">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-success">
                        Yadda saxla
                    </button>
                    <a asp-action="index" class="btn btn-info">Geri qayit</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
